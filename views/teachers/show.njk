{% extends "layout.njk" %}

{% block content %}
<div class="card">
  <section class="avatar" style="background: url({{teacher.url}}) no-repeat center center /cover"></section>
  <section class="details">
    <h3>Detalhes</h3>
    <div class="item">
      <div>Nome</div>
      <div>{{teacher.name}}</div>
    </div>
    
    <div class="item">
      <div>Idade</div>
      <div>{{teacher.birth}}</div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>{{teacher.schooling}}</div>
    </div>
    
    <div class="item">
      <div>Tipo de aula</div>
      <div>{{teacher.type_of_class}}</div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      <div>
        {% for area in teacher.area %}
        <span>{{area}}</span>
        {% endfor%}
      </div>
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{teacher.created_at}}</div>
    </div>

    <a class="button" href="{{teacher.id}}/edit">Editar</a>
    
  </section>
</div>
{% endblock content %}